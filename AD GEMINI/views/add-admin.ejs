<%- include('layouts/header'); %>

    <div class="flex-1 flex flex-col h-screen md:ml-64 main-content transition-all duration-300">
        <header
            class="h-16 bg-white border-b border-slate-200 flex items-center justify-between px-6 sticky top-0 z-10">
            <h2 class="text-lg font-semibold text-slate-800">Create Profile</h2>
        </header>

        <main class="flex-1 overflow-y-auto p-6 bg-slate-50 flex justify-center">

            <div class="w-full max-w-4xl bg-white rounded-xl shadow-sm border border-slate-200 overflow-x-hidden">
                        <div id="client-error-container"
                            class="hidden mb-4 rounded-lg bg-red-50 border border-red-200 px-4 py-3 text-red-700 text-sm">
                        </div>
                        <form id="addAdminForm" action="/insertAdminData" method="post" enctype="multipart/form-data">
                            <div class="md:flex">
                                <div
                                    class="md:w-1/3 bg-slate-50 p-8 border-r border-slate-200 flex flex-col items-center justify-center text-center">
                                    <div class="relative group">
                                        <label for="adminImage" class="cursor-pointer">
                                            <img id="imagePreview"
                                                class="w-40 h-40 rounded-full object-cover border-4 border-white shadow-md"
                                                src="https://ui-avatars.com/api/?name=Moksh+Shah&background=cbd5e1&color=fff&size=256"
                                                alt="Profile Preview" />

                                            <span
                                                class="absolute bottom-2 right-2 bg-indigo-600 text-white p-2.5 rounded-full cursor-pointer hover:bg-indigo-700 transition shadow-lg group-hover:scale-110">
                                                <i data-lucide="camera" class="w-5 h-5"></i>
                                            </span>
                                        </label>
                                        <input type="file" id="adminImage" accept="image/*" class="hidden"
                                            name="avatar" />
                                    </div>
                                    <h3 class="mt-4 text-lg font-medium text-slate-800">Profile Photo</h3>
                                    <p class="text-xs text-slate-500 mt-1 max-w-[200px]">Upload a high-res picture. Max
                                        size
                                        2MB.</p>
                                </div>

                                <div class="md:w-2/3 p-8">
                                    <h2 class="text-xl font-bold text-slate-800 mb-6">Account Details</h2>

                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                        <div>
                                            <label class="block text-sm font-medium text-slate-700 mb-1">First
                                                Name</label>
                                            <input type="text" id="fname" name="fname" placeholder="Ex: John Doe"
                                                class="w-full rounded-lg border-slate-300 border px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-slate-700 mb-1">Last
                                                Name</label>
                                            <input type="text" id="lname" name="lname" placeholder="Ex: John Doe"
                                                class="w-full rounded-lg border-slate-300 border px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
                                        </div>
                                    </div>

                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                        <div>
                                            <label class="block text-sm font-medium text-slate-700 mb-1">Email
                                                Address</label>
                                            <input type="email" id="email" name="email" placeholder="Ex: john@nexus.com"
                                                class="w-full rounded-lg border-slate-300 border px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
                                        </div>
                                        <div>
                                            <label
                                                class="block text-sm font-medium text-slate-700 mb-1">Password</label>
                                            <input type="password" id="password" name="password" placeholder="••••••••"
                                                class="w-full rounded-lg border-slate-300 border px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
                                        </div>

                                    </div>

                                    <div class="mb-6">
                                        <label class="block text-xs font-semibold text-slate-500 uppercase mb-1">
                                            Date Joined
                                        </label>
                                        <div class="relative">
                                            <div
                                                class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <i data-lucide="calendar" class="h-4 w-4 text-slate-400"></i>
                                            </div>

                                            <input type="date" id="date-field" name="date" class="pl-10 block w-full rounded-lg border-slate-300 border bg-white px-3 py-2 text-sm text-slate-600 shadow-sm placeholder-slate-400
                                                focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition duration-200
                                                [color-scheme:light]">
                                        </div>
                                    </div>
                                    <div class="mb-6">
                                        <div>
                                            <label class="block text-sm font-medium text-slate-700 mb-2">Gender</label>
                                            <div class="flex space-x-4 mt-2">
                                                <label class="flex items-center cursor-pointer">
                                                    <input type="radio" name="gender" value="Male" checked
                                                        class="text-indigo-600 focus:ring-indigo-500">
                                                    <span class="ml-2 text-sm text-slate-700">Male</span>
                                                </label>
                                                <label class="flex items-center cursor-pointer">
                                                    <input type="radio" name="gender" value="Female"
                                                        class="text-indigo-600 focus:ring-indigo-500">
                                                    <span class="ml-2 text-sm text-slate-700">Female</span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-6">
                                        <label class="block text-sm font-medium text-slate-700 mb-2">Hobbies &
                                            Interests</label>
                                        <div class="flex flex-wrap gap-3">
                                            <label
                                                class="cursor-pointer inline-flex items-center px-3 py-1.5 rounded-full border border-slate-200 bg-white hover:bg-slate-50">
                                                <input type="checkbox" name="hobby" value="Coding"
                                                    class="rounded text-indigo-600 focus:ring-indigo-500" name="hobby">
                                                <span class="ml-2 text-sm text-slate-600">Coding</span>
                                            </label>
                                            <label
                                                class="cursor-pointer inline-flex items-center px-3 py-1.5 rounded-full border border-slate-200 bg-white hover:bg-slate-50">
                                                <input type="checkbox" name="hobby" value="Design"
                                                    class="rounded text-indigo-600 focus:ring-indigo-500" name="hobby">
                                                <span class="ml-2 text-sm text-slate-600">Design</span>
                                            </label>
                                            <label
                                                class="cursor-pointer inline-flex items-center px-3 py-1.5 rounded-full border border-slate-200 bg-white hover:bg-slate-50">
                                                <input type="checkbox" name="hobby" value="Marketing"
                                                    class="rounded text-indigo-600 focus:ring-indigo-500" name="hobby">
                                                <span class="ml-2 text-sm text-slate-600">Marketing</span>
                                            </label>
                                            <label
                                                class="cursor-pointer inline-flex items-center px-3 py-1.5 rounded-full border border-slate-200 bg-white hover:bg-slate-50">
                                                <input type="checkbox" name="hobby" value="Reading"
                                                    class="rounded text-indigo-600 focus:ring-indigo-500" name="hobby">
                                                <span class="ml-2 text-sm text-slate-600">Reading</span>
                                            </label>
                                            <label
                                                class="cursor-pointer inline-flex items-center px-3 py-1.5 rounded-full border border-slate-200 bg-white hover:bg-slate-50">
                                                <input type="checkbox" name="hobby" value="Travelling"
                                                    class="rounded text-indigo-600 focus:ring-indigo-500" name="hobby">
                                                <span class="ml-2 text-sm text-slate-600">Travelling</span>
                                            </label>
                                            <label
                                                class="cursor-pointer inline-flex items-center px-3 py-1.5 rounded-full border border-slate-200 bg-white hover:bg-slate-50">
                                                <input type="checkbox" name="hobby" value="Gaming"
                                                    class="rounded text-indigo-600 focus:ring-indigo-500" name="hobby">
                                                <span class="ml-2 text-sm text-slate-600">Gaming</span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="mb-6">
                                        <label class="block text-sm font-medium text-slate-700 mb-1">Short Bio</label>
                                        <textarea id="description" rows="3"
                                            class="w-full rounded-lg border-slate-300 border px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 outline-none"
                                            name="desc"
                                            placeholder="Write a few sentences about the admin..."></textarea>
                                    </div>

                                    <div class="flex justify-end pt-4 border-t border-slate-100">
                                        <button type="button"
                                            class="mr-4 px-4 py-2 text-slate-500 hover:text-slate-700 text-sm font-medium">Cancel</button>
                                        <button type="submit" id="submitBtn"
                                            class="bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 transition text-sm font-medium shadow-sm shadow-indigo-200">
                                            Create Account
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
            </div>

        </main>
    </div>
    </div>

    <%- include('layouts/footer'); %>