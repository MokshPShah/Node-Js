<%- include('../../layouts/header') %>

<div class="flex-1 flex flex-col h-screen md:ml-64 main-content transition-all duration-300">

    <div class="bg-white h-16 border-b border-slate-200 flex items-center justify-between px-6 sticky top-0 z-10">
        <h2 class="text-lg font-bold text-slate-800">Sub Category Management</h2>
        <a href="/subcategory/addSubCategory" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg text-sm font-medium flex items-center transition shadow-sm">
            <i data-lucide="plus" class="w-4 h-4 mr-2"></i> Add New
        </a>
    </div>

    <main class="flex-1 overflow-y-auto p-6 bg-slate-50">
        
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6">
            <div class="relative w-full md:w-96">
                <i data-lucide="search" class="absolute left-3 top-2.5 w-5 h-5 text-slate-400"></i>
                <input type="text" id="searchInput" placeholder="Search categories..." 
                    class="w-full pl-10 pr-4 py-2 rounded-lg border border-slate-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent bg-white shadow-sm text-sm">
            </div>
            <div class="text-sm text-slate-500">
                Total Categories: <span class="font-bold text-indigo-600"><%= subCategories.length %></span>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-50 border-b border-slate-200 text-xs uppercase text-slate-500 font-semibold tracking-wider">
                            <th class="px-6 py-4">#</th>
                            <th class="px-6 py-4">Sub Category Name</th>
                            <th class="px-6 py-4">Category Head</th>
                            <th class="px-6 py-4 text-center">Status</th>
                            <th class="px-6 py-4 text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100 text-sm">
                        
                        <% if (subCategories && subCategories.length > 0) { %>
                            <% subCategories.map((subCat, i) => { %>
                                <tr class="hover:bg-slate-50 transition duration-150 group">
                                    
                                    <td class="px-6 py-4 text-slate-400 font-mono text-xs">
                                        <%= i + 1 %>
                                    </td>

                                    <td class="px-6 py-4">
                                        <div class="font-medium text-slate-800"><%= subCat.sname %></div>
                                    </td>

                                    <td class="px-6 py-4">
                                        <div class="font-medium text-slate-800"><%= subCat.categoryID.cat_name %></div>
                                    </td>

                                    <td class="px-6 py-4 text-center">
                                        <% if (subCat.status == 1) { %>
                                            <a href="/subcategory/changeStatus/?id=<%= subCat._id %>&status=0" 
                                               class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700 border border-green-200 cursor-pointer hover:bg-green-200 transition">
                                                <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1.5"></span> Active
                                            </a>
                                        <% } else { %>
                                            <a href="/subcategory/changeStatus/?id=<%= subCat._id %>&status=1" 
                                               class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-700 border border-red-200 cursor-pointer hover:bg-red-200 transition">
                                                <span class="w-1.5 h-1.5 bg-red-500 rounded-full mr-1.5"></span> Deactive
                                            </a>
                                        <% } %>
                                    </td>

                                    <td class="px-6 py-4 text-right">
                                        <div class="flex items-center justify-end space-x-2">
                                            <a href="/subcategory/updateSubCategory/<%= subCat._id %>" class="p-2 bg-indigo-50 text-indigo-600 rounded-lg hover:bg-indigo-100 transition border border-indigo-100" title="Edit">
                                                <i data-lucide="edit-3" class="w-4 h-4"></i>
                                            </a>
                                            <a href="/subcategory/deleteSubCategory/<%= subCat._id %>" onclick="return confirm('Are you sure you want to delete this sub category?')" class="p-2 bg-red-50 text-red-600 rounded-lg hover:bg-red-100 transition border border-red-100" title="Delete">
                                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                                            </a>
                                        </div>
                                    </td>

                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="px-6 py-12 text-center text-slate-400">
                                    <div class="flex flex-col items-center justify-center">
                                        <div class="bg-slate-100 p-4 rounded-full mb-3">
                                            <i data-lucide="folder-open" class="w-8 h-8 text-slate-400"></i>
                                        </div>
                                        <p class="text-sm font-medium text-slate-500">No Sub categories found.</p>
                                        <a href="/subcategory/addSubCategory" class="text-indigo-600 hover:text-indigo-700 text-xs font-semibold mt-2">Create your first Sub category</a>
                                    </div>
                                </td>
                            </tr>
                        <% } %>

                    </tbody>
                </table>
            </div>
        </div>
    </main>

</div>

<%- include('../../layouts/footer') %>

<script>
    document.getElementById('searchInput').addEventListener('keyup', function() {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll('tbody tr');

        rows.forEach(row => {
            let text = row.innerText.toLowerCase();
            row.style.display = text.includes(filter) ? '' : 'none';
        });
    });
</script>