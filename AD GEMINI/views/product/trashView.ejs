<%- include('../layouts/header') %>

    <div class="flex-1 flex flex-col h-screen md:ml-64 main-content transition-all duration-300">
        <div class="bg-white h-16 border-b border-slate-200 flex items-center justify-between px-6 sticky top-0 z-10">
            <h2 class="text-lg font-bold text-slate-800">Recycle Bin</h2>
        </div>

        <main class="flex-1 overflow-y-auto p-6 bg-slate-50">
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr
                                class="bg-slate-50 border-b border-slate-200 text-xs uppercase text-slate-500 font-semibold">
                                <th class="px-6 py-4">Image</th>
                                <th class="px-6 py-4">Product Name</th>
                                <th class="px-6 py-4">Category</th>
                                <th class="px-6 py-4">Sub Category</th>
                                <th class="px-6 py-4">Price</th>
                                <th class="px-6 py-4 text-center">Status</th>
                                <th class="px-6 py-4 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100 text-sm">
                            <% if (products && products.length> 0) { %>
                                <% products.map((item)=> { %>
                                    <tr class="hover:bg-slate-50 transition group">
                                        <td class="px-6 py-3">
                                            <img src="<%= item.product_image %>"
                                                class="w-12 h-12 rounded-lg object-cover border border-slate-200"
                                                alt="<%= item.product_name %>">
                                        </td>
                                        <td class="px-6 py-3 font-medium text-slate-800 w-96">
                                            <%= item.product_name %>
                                        </td>

                                        <td class="px-6 py-3 text-slate-500">
                                            <span
                                                class="px-2.5 py-1 rounded-full bg-slate-100 text-slate-600 text-xs font-semibold">
                                                <%= item.subcategoryID.categoryID ?
                                                    item.subcategoryID.categoryID.cat_name : 'No Category' %>
                                            </span>
                                        </td>

                                        <td class="px-6 py-3 text-slate-500">
                                            <span
                                                class="px-2.5 py-1 rounded-full bg-slate-100 text-slate-600 text-xs font-semibold">
                                                <%= item.subcategoryID ? item.subcategoryID.sname : 'No Sub Category' %>
                                            </span>
                                        </td>

                                        <td class="px-6 py-3 font-semibold text-slate-700">â‚¹<%= item.price %>
                                        </td>
                                        <td class="px-6 py-3 text-center">
                                            <% if (item.status==1) { %>
                                                <a href="/product/changeStatus/?id=<%= item._id %>&status=0"
                                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700 border border-green-200 cursor-pointer hover:bg-green-200 transition">
                                                    <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1.5"></span>
                                                    Active
                                                </a>
                                                <% } else { %>
                                                    <a href="/product/changeStatus/?id=<%= item._id %>&status=1"
                                                        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-700 border border-red-200 cursor-pointer hover:bg-red-200 transition">
                                                        <span class="w-1.5 h-1.5 bg-red-500 rounded-full mr-1.5"></span>
                                                        Deactive
                                                    </a>
                                                    <% } %>
                                        </td>
                                        <td class="px-6 py-3 text-right">
                                            <a href="/product/restoreProduct/<%= item._id %>"
                                                class="p-2 text-green-600 hover:bg-red-50 rounded-lg transition inline-flex" title="Restore Product">
                                                <i data-lucide="rotate-cw" class="w-4 h-4"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="6" class="px-6 py-12 text-center text-slate-400">
                                                    <div class="flex flex-col items-center justify-center">
                                                        <div class="bg-slate-100 p-4 rounded-full mb-3">
                                                            <i data-lucide="folder-open"
                                                                class="w-8 h-8 text-slate-400"></i>
                                                        </div>
                                                        <p class="text-sm font-medium text-slate-500">No Deleted Products
                                                            found.</p>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
    <%- include('../layouts/footer') %>