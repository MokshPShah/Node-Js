<%- include('layouts/header'); %>



    <div class="flex-1 flex flex-col h-screen md:ml-64 transition-all">
        <header class="h-16 bg-white border-b border-slate-200 flex items-center justify-between px-6 sticky top-0 z-10">
            <h2 class="text-lg font-semibold text-slate-800">Dashboard Overview</h2>
            <div class="flex items-center space-x-4">
                <button class="p-2 text-slate-400 hover:bg-slate-100 rounded-full"><i data-lucide="search" class="w-5 h-5"></i></button>
                <button class="p-2 text-slate-400 hover:bg-slate-100 rounded-full relative">
                    <i data-lucide="bell" class="w-5 h-5"></i>
                    <span class="absolute top-2 right-2 w-2 h-2 bg-red-500 rounded-full border border-white"></span>
                </button>
            </div>
        </header>

        <main class="flex-1 overflow-y-auto p-6 bg-slate-50">
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
                <div class="bg-white rounded-xl shadow-sm p-6 border border-slate-100">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-slate-500 text-sm font-medium">Total Revenue</p>
                            <p class="text-3xl font-bold text-slate-800 mt-2">$45,231</p>
                        </div>
                        <div class="p-2 bg-green-50 rounded-lg"><i data-lucide="dollar-sign" class="w-6 h-6 text-green-600"></i></div>
                    </div>
                    <p class="text-xs text-green-600 mt-2 flex items-center"><i data-lucide="trending-up" class="w-3 h-3 mr-1"></i> +20.1% from last month</p>
                </div>
                
                <div class="bg-white rounded-xl shadow-sm p-6 border border-slate-100">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-slate-500 text-sm font-medium">Total Admins</p>
                            <p class="text-3xl font-bold text-slate-800 mt-2" id="stat-total"><%= admins.length %></p>
                        </div>
                        <div class="p-2 bg-indigo-50 rounded-lg"><i data-lucide="users" class="w-6 h-6 text-indigo-600"></i></div>
                    </div>
                    <p class="text-xs text-slate-400 mt-2 flex items-center">Active contributors</p>
                </div>

                <div class="bg-white rounded-xl shadow-sm p-6 border border-slate-100">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-slate-500 text-sm font-medium">Pending Tasks</p>
                            <p class="text-3xl font-bold text-slate-800 mt-2">12</p>
                        </div>
                        <div class="p-2 bg-orange-50 rounded-lg"><i data-lucide="clipboard-list" class="w-6 h-6 text-orange-600"></i></div>
                    </div>
                    <p class="text-xs text-orange-600 mt-2">Requires attention</p>
                </div>

                <div class="bg-white rounded-xl shadow-sm p-6 border border-slate-100">
                    <div class="flex justify-between items-start">
                        <div>
                            <p class="text-slate-500 text-sm font-medium">Server Uptime</p>
                            <p class="text-3xl font-bold text-slate-800 mt-2">99.9%</p>
                        </div>
                        <div class="p-2 bg-blue-50 rounded-lg"><i data-lucide="server" class="w-6 h-6 text-blue-600"></i></div>
                    </div>
                    <p class="text-xs text-green-600 mt-2">System healthy</p>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
                <div class="lg:col-span-2 bg-white p-6 rounded-xl shadow-sm border border-slate-100">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="font-bold text-slate-800 text-lg">Revenue Analytics</h3>
                        <select class="bg-slate-50 border border-slate-200 text-xs rounded-lg px-2 py-1 outline-none text-slate-600">
                            <option>This Year</option>
                            <option>Last Year</option>
                        </select>
                    </div>
                    <div class="h-72">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>

                <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-100">
                    <h3 class="font-bold text-slate-800 text-lg mb-4">Traffic Source</h3>
                    <div class="h-56 flex items-center justify-center relative">
                        <canvas id="trafficChart"></canvas>
                    </div>
                    <div class="mt-4 space-y-2">
                        <div class="flex justify-between text-sm">
                            <span class="flex items-center"><span class="w-3 h-3 rounded-full bg-indigo-500 mr-2"></span>Direct</span>
                            <span class="font-semibold text-slate-700">55%</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="flex items-center"><span class="w-3 h-3 rounded-full bg-blue-400 mr-2"></span>Social</span>
                            <span class="font-semibold text-slate-700">30%</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="flex items-center"><span class="w-3 h-3 rounded-full bg-slate-300 mr-2"></span>Organic</span>
                            <span class="font-semibold text-slate-700">15%</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm border border-slate-100 mb-6 overflow-hidden">
                <div class="p-6 border-b border-slate-100 flex justify-between items-center">
                    <h3 class="font-bold text-slate-800 text-lg">Recent Transactions</h3>
                    <button class="text-sm text-indigo-600 font-medium hover:text-indigo-800">View All</button>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead class="bg-slate-50 text-slate-500 text-xs uppercase font-semibold">
                            <tr>
                                <th class="px-6 py-3">ID</th>
                                <th class="px-6 py-3">User</th>
                                <th class="px-6 py-3">Date</th>
                                <th class="px-6 py-3">Amount</th>
                                <th class="px-6 py-3">Status</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100 text-sm text-slate-600">
                            <tr class="hover:bg-slate-50 transition">
                                <td class="px-6 py-4">#TRX-9801</td>
                                <td class="px-6 py-4 font-medium text-slate-800">Spotify Sub</td>
                                <td class="px-6 py-4">Oct 24, 2023</td>
                                <td class="px-6 py-4">$14.00</td>
                                <td class="px-6 py-4"><span class="bg-green-100 text-green-700 px-2 py-1 rounded-full text-xs font-semibold">Completed</span></td>
                            </tr>
                            <tr class="hover:bg-slate-50 transition">
                                <td class="px-6 py-4">#TRX-9802</td>
                                <td class="px-6 py-4 font-medium text-slate-800">Cloud Hosting</td>
                                <td class="px-6 py-4">Oct 24, 2023</td>
                                <td class="px-6 py-4">$120.50</td>
                                <td class="px-6 py-4"><span class="bg-orange-100 text-orange-700 px-2 py-1 rounded-full text-xs font-semibold">Pending</span></td>
                            </tr>
                            <tr class="hover:bg-slate-50 transition">
                                <td class="px-6 py-4">#TRX-9803</td>
                                <td class="px-6 py-4 font-medium text-slate-800">Figma Pro</td>
                                <td class="px-6 py-4">Oct 23, 2023</td>
                                <td class="px-6 py-4">$45.00</td>
                                <td class="px-6 py-4"><span class="bg-green-100 text-green-700 px-2 py-1 rounded-full text-xs font-semibold">Completed</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                
                <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-100">
                    <h3 class="font-bold text-slate-800 text-lg mb-4">Latest Support Tickets</h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-slate-50 border border-slate-100 transition cursor-pointer">
                            <div class="flex items-center">
                                <div class="bg-red-100 p-2 rounded-full mr-3 text-red-600"><i data-lucide="alert-circle" class="w-4 h-4"></i></div>
                                <div>
                                    <p class="text-sm font-semibold text-slate-800">Login Issue</p>
                                    <p class="text-xs text-slate-500">User: john.d@example.com</p>
                                </div>
                            </div>
                            <span class="text-xs text-slate-400">2m ago</span>
                        </div>
                        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-slate-50 border border-slate-100 transition cursor-pointer">
                            <div class="flex items-center">
                                <div class="bg-blue-100 p-2 rounded-full mr-3 text-blue-600"><i data-lucide="help-circle" class="w-4 h-4"></i></div>
                                <div>
                                    <p class="text-sm font-semibold text-slate-800">Payment Question</p>
                                    <p class="text-xs text-slate-500">User: sarah@nexus.com</p>
                                </div>
                            </div>
                            <span class="text-xs text-slate-400">15m ago</span>
                        </div>
                        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-slate-50 border border-slate-100 transition cursor-pointer">
                            <div class="flex items-center">
                                <div class="bg-slate-100 p-2 rounded-full mr-3 text-slate-600"><i data-lucide="settings" class="w-4 h-4"></i></div>
                                <div>
                                    <p class="text-sm font-semibold text-slate-800">Account Setup</p>
                                    <p class="text-xs text-slate-500">User: new.guy@test.com</p>
                                </div>
                            </div>
                            <span class="text-xs text-slate-400">1h ago</span>
                        </div>
                    </div>
                </div>

                <div class="bg-white p-6 rounded-xl shadow-sm border border-slate-100">
                    <h3 class="font-bold text-slate-800 text-lg mb-4">System Health</h3>
                    <div class="space-y-6">
                        <div>
                            <div class="flex justify-between mb-1">
                                <span class="text-sm font-medium text-slate-700">CPU Usage</span>
                                <span class="text-sm font-medium text-slate-700">45%</span>
                            </div>
                            <div class="w-full bg-slate-100 rounded-full h-2.5">
                                <div class="bg-indigo-600 h-2.5 rounded-full" style="width: 45%"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between mb-1">
                                <span class="text-sm font-medium text-slate-700">Memory Usage</span>
                                <span class="text-sm font-medium text-slate-700">72%</span>
                            </div>
                            <div class="w-full bg-slate-100 rounded-full h-2.5">
                                <div class="bg-blue-500 h-2.5 rounded-full" style="width: 72%"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between mb-1">
                                <span class="text-sm font-medium text-slate-700">SSD Storage</span>
                                <span class="text-sm font-medium text-slate-700">28%</span>
                            </div>
                            <div class="w-full bg-slate-100 rounded-full h-2.5">
                                <div class="bg-green-500 h-2.5 rounded-full" style="width: 28%"></div>
                            </div>
                        </div>
                        <div class="pt-2">
                             <div class="flex items-center justify-between p-3 bg-slate-50 rounded-lg border border-slate-100">
                                <div class="flex items-center">
                                    <i data-lucide="globe" class="w-4 h-4 text-slate-400 mr-2"></i>
                                    <span class="text-sm text-slate-600">US-East Server</span>
                                </div>
                                <span class="flex h-2 w-2 relative">
                                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                                    <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
                                </span>
                             </div>
                        </div>
                    </div>
                </div>

            </div>

        </main>
    </div>
</div>

<%- include('layouts/footer'); %>