<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add New Movie | BookMyShow</title>
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/addMovie.css">
</head>

<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/"><img src="/images/logo.png" alt="logo" width="150"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <form class="d-flex mx-auto w-50" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                        <button class="btn btn-outline-danger" type="submit">Search</button>
                    </form>
                    <ul class="navbar-nav mb-2 mb-lg-0 gap-3">
                        <li class="nav-item">
                            <a class="btn btn-danger" aria-current="page" href="/movies/addMovie">Add Movie</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-danger" href="/movies/viewAllMovie">View All Movie</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main -->
    <main>
        <!-- Add Movie Form -->
        <div class="container mt-5" style="max-width: 750px;">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="my-4 text-center">Edit Movie Details</h3>
                    <form action="/movies/updateMovie/<%= movie._id %>" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Movie Title</label>
                            <input type="text" name="title" class="form-control" required value="<%= movie.title %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Upload Poster (.jpg/.jpeg)</label>
                            <input class="form-control" type="file" accept=".jpg,.jpeg" name="image">
                            <div class="my-3">
                                <p class="fw-bold mb-1">Old Movie Poster</p>
                                <img src="/uploads/<%= movie.image %>" alt="<%= movie.title %>" width="100" height="100"
                                    class="object-fit-contain">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Languages</label>
                            <input type="text" name="language" class="form-control"
                                placeholder="Enter languages separated by comma" required value="<%= movie.language %>">
                        </div>
                        <div class="d-flex gap-5">
                            <div class="col-5">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Genre</label>
                                    <input type="text" name="genre" class="form-control"
                                        placeholder="Enter genres separated by comma" required
                                        value="<%= movie.genre %>">
                                </div>
                            </div>
                            <div class="col-5">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Duration</label>
                                    <input type="text" name="duration" class="form-control"
                                        placeholder="Enter movie duration" required value="<%= movie.duration %>">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Rating</label>
                            <input type="number" step="0.1" min="0" max="10" name="rating" class="form-control" required
                                value="<%= movie.rating %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Description</label>
                            <textarea name="desc" class="form-control" rows="3" required> <%= movie.desc %></textarea>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-outline-danger px-5" type="submit">Update Movie</button>
                        </div>

                    </form>

                </div>

                <!-- old poster -->

            </div>
        </div>
    </main>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
</body>

</html>