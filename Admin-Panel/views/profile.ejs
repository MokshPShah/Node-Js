<%- include('layouts/header') %>
    <div class="flex-1 flex flex-col h-screen md:ml-64 main-content transition-all duration-300">
        <div class="p-6 lg:p-10 max-w-5xl mx-auto">

            <div class="mb-8 flex justify-between items-center">
                <div>
                    <h1 class="text-2xl font-bold text-slate-800">My Profile</h1>
                    <p class="text-slate-500 text-sm mt-1">Manage your personal information and security.</p>
                </div>

                <div>
                    <button id="editBtn" onclick="toggleEditMode()"
                        class="flex items-center bg-indigo-600 text-white px-5 py-2.5 rounded-lg hover:bg-indigo-700 transition shadow-sm text-sm font-medium">
                        <i data-lucide="edit-3" class="w-4 h-4 mr-2"></i> Edit Profile
                    </button>
                    <button id="cancelBtn" onclick="toggleEditMode()"
                        class="hidden flex items-center bg-white border border-slate-300 text-slate-700 px-5 py-2.5 rounded-lg hover:bg-slate-50 transition shadow-sm text-sm font-medium">
                        <i data-lucide="x" class="w-4 h-4 mr-2"></i> Cancel Editing
                    </button>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

                <div class="lg:col-span-1">
                    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-8 text-center sticky top-24">
                        <div class="relative inline-block group">
                            <img src="<%= admin.avatar %>"
                                onerror="this.src='https://ui-avatars.com/api/?name=<%= admin.name %>'"
                                class="w-32 h-32 rounded-full object-cover border-4 border-slate-50 shadow-md mx-auto mb-4">
                            <span
                                class="absolute bottom-4 right-2 bg-green-500 w-4 h-4 rounded-full border-2 border-white"
                                title="Active"></span>
                        </div>

                        <h2 class="text-xl font-bold text-slate-800">
                            <%= admin.name %>
                        </h2>
                        <p class="text-indigo-600 font-medium text-sm mb-4">Administrator</p>

                        <div class="flex justify-center gap-2 mb-6">
                            <span class="px-3 py-1 bg-slate-100 text-slate-600 text-xs rounded-full font-medium">
                                Joined <%= new Date(admin.date).toLocaleDateString() %>
                            </span>
                        </div>

                        <div class="border-t border-slate-100 pt-6 text-left">
                            <div class="mb-4">
                                <label class="block text-xs font-bold text-slate-400 uppercase mb-1">Email
                                    Address</label>
                                <div class="flex items-center text-slate-700 text-sm">
                                    <i data-lucide="mail" class="w-4 h-4 mr-2 text-slate-400"></i>
                                    <%= admin.email %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="lg:col-span-2">

                    <div id="viewMode" class="bg-white rounded-xl shadow-sm border border-slate-200 p-8">
                        <h3 class="text-lg font-bold text-slate-800 mb-6 border-b border-slate-100 pb-4">Personal
                            Details</h3>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                            <div>
                                <label class="block text-xs font-bold text-slate-400 uppercase mb-1">Gender</label>
                                <p class="text-slate-700 font-medium">
                                    <%= admin.gender %>
                                </p>
                            </div>
                            <div>
                                <label class="block text-xs font-bold text-slate-400 uppercase mb-1">Hobbies</label>
                                <div class="flex flex-wrap gap-2 mt-1">
                                    <% if (admin.hobby && admin.hobby.length> 0) { %>
                                        <% admin.hobby.forEach(h=> { %>
                                            <span
                                                class="px-2.5 py-1 bg-indigo-50 text-indigo-700 text-xs font-medium rounded-md border border-indigo-100">
                                                <%= h %>
                                            </span>
                                            <% }) %>
                                                <% } else { %>
                                                    <span class="text-slate-400 italic text-sm">No hobbies added</span>
                                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <div class="mb-6">
                            <label class="block text-xs font-bold text-slate-400 uppercase mb-2">Short Bio</label>
                            <p
                                class="text-slate-600 text-sm leading-relaxed bg-slate-50 p-4 rounded-lg border border-slate-100">
                                <%= admin.desc || "No description provided." %>
                            </p>
                        </div>
                    </div>

                    <div id="editMode"
                        class="hidden bg-white rounded-xl shadow-sm border border-slate-200 p-8 border-l-4 border-l-indigo-600">
                        <h3 class="text-lg font-bold text-slate-800 mb-6">Edit Profile</h3>

                        <form action="/update-profile" method="POST" enctype="multipart/form-data">

                            <% const nameParts=admin.name.split(' ');
                        const fname = nameParts[0];
                        const lname = nameParts.slice(1).join(' ');
                    %>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">First Name</label>
                            <input type="text" name="fname" value="<%= fname %>" required 
                                class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Last Name</label>
                            <input type="text" name="lname" value="<%= lname %>" required 
                                class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
                        </div>
                    </div>

                    <div class="mb-6">
                        <label class="block text-sm font-medium text-slate-700 mb-1">Email Address</label>
                        <input type="email" name="email" value="<%= admin.email %>" required
                            class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
                    </div>

                    <div class="mb-6">
                        <label class="block text-sm font-medium text-slate-700 mb-1">New Password <span class="text-slate-400 font-normal text-xs ml-1">(Leave blank to keep current)</span></label>
                        <input type="password" name="password" placeholder="••••••••"
                            class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
                    </div>

                    <div class="mb-6">
                        <label class="block text-sm font-medium text-slate-700 mb-2">Gender</label>
                        <div class="flex space-x-6">
                            <label class="flex items-center cursor-pointer">
                                <input type="radio" name="gender" value="Male" <%= admin.gender === ' Male' ? 'checked'
                                : '' %> class="text-indigo-600">
                                <span class="ml-2 text-sm text-slate-700">Male</span>
                                </label>
                                <label class="flex items-center cursor-pointer">
                                    <input type="radio" name="gender" value="Female" <%=admin.gender==='Female'
                                        ? 'checked' : '' %> class="text-indigo-600">
                                    <span class="ml-2 text-sm text-slate-700">Female</span>
                                </label>
                    </div>
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-slate-700 mb-2">Hobbies</label>
                    <div class="flex flex-wrap gap-3">
                        <% const hobbiesList=['Coding', 'Design' , 'Marketing' , 'Reading' , 'Travelling' , 'Gaming' ];
                            %>
                            <% hobbiesList.forEach(hobby=> { %>
                                <label class="inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="hobby" value="<%= hobby %>" <%=admin.hobby &&
                                        admin.hobby.includes(hobby) ? 'checked' : '' %>
                                    class="rounded text-indigo-600 focus:ring-indigo-500">
                                    <span class="ml-2 text-sm text-slate-600">
                                        <%= hobby %>
                                    </span>
                                </label>
                                <% }) %>
                    </div>
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-slate-700 mb-1">Bio</label>
                    <textarea name="desc" rows="3"
                        class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-indigo-500 outline-none"><%= admin.desc %></textarea>
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-slate-700 mb-1">Update Profile Photo</label>
                    <input type="file" name="avatar" accept="image/*"
                        class="block w-full text-xs text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" />
                </div>

                <div class="flex justify-end pt-4 border-t border-slate-100">
                    <button type="submit"
                        class="bg-indigo-600 text-white px-6 py-2.5 rounded-lg hover:bg-indigo-700 transition shadow-md text-sm font-medium">Save
                        Changes</button>
                </div>
                </form>
            </div>

        </div>
    </div>
    </div>
    </div>

    <%- include('layouts/footer') %>

        <script>
            function toggleEditMode() {
                const viewMode = document.getElementById('viewMode');
                const editMode = document.getElementById('editMode');
                const editBtn = document.getElementById('editBtn');
                const cancelBtn = document.getElementById('cancelBtn');

                if (editMode.classList.contains('hidden')) {
                    // Show Edit
                    viewMode.classList.add('hidden');
                    editMode.classList.remove('hidden');
                    editBtn.classList.add('hidden');
                    cancelBtn.classList.remove('hidden');
                } else {
                    // Show View
                    editMode.classList.add('hidden');
                    viewMode.classList.remove('hidden');
                    cancelBtn.classList.add('hidden');
                    editBtn.classList.remove('hidden');
                }
            }
        </script>