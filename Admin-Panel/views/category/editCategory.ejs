<%- include('../layouts/header') %>

<div class="flex-1 flex flex-col h-screen md:ml-64 transition-all duration-300">
    <div class="bg-white h-16 border-b border-slate-200 flex items-center justify-between px-6 sticky top-0 z-10">
        <h2 class="text-lg font-bold text-slate-800">Edit Category</h2>
        <a href="/category/viewCategory" class="text-indigo-600 hover:text-indigo-700 text-sm font-medium">Back to List</a>
    </div>

    <main class="flex-1 overflow-y-auto p-8 bg-slate-50">
        <div class="max-w-2xl mx-auto bg-white rounded-xl shadow-sm border border-slate-200 p-8">
            
            <form action="/category/editCategory/<%= category._id %>" method="POST" class="space-y-6">
                
                <div>
                    <label class="block text-xs font-bold text-slate-500 uppercase mb-2">Category Name</label>
                    <input type="text" name="cat_name" value="<%= category.cat_name %>" required
                        class="w-full rounded-lg border border-slate-300 px-4 py-3 text-sm focus:ring-2 focus:ring-indigo-500 outline-none">
                </div>

                <div>
                    <label class="block text-xs font-bold text-slate-500 uppercase mb-3">Status</label>
                    <div class="flex items-center space-x-6">
                        <label class="flex items-center cursor-pointer">
                            <input type="radio" name="status" value="1" <%= category.status == 1 ? 'checked' : '' %> class="text-indigo-600 focus:ring-indigo-500">
                            <span class="ml-2 text-sm text-slate-700">Active</span>
                        </label>
                        <label class="flex items-center cursor-pointer">
                            <input type="radio" name="status" value="0" <%= category.status == 0 ? 'checked' : '' %> class="text-red-500 focus:ring-red-500">
                            <span class="ml-2 text-sm text-slate-700">Deactive</span>
                        </label>
                    </div>
                </div>

                <div class="pt-6 border-t border-slate-100 flex justify-end">
                    <button type="submit" class="px-6 py-2.5 rounded-lg bg-indigo-600 text-white text-sm font-medium hover:bg-indigo-700 transition">
                        Update Category
                    </button>
                </div>

            </form>
        </div>
    </main>
</div>

<%- include('../layouts/footer') %>